		part {
			name: "base";
			type: SPACER;
			scale: 1;
			description {
				state: "default" 0.0;
				min: 0 ENTRY_ITEM_HEIGHT;
				max: -1 ENTRY_ITEM_HEIGHT;
			}
		}

		part {
			name: "padding_left";
			type: SPACER;
			scale: 1;
			description {
				state: "default" 0.0;
