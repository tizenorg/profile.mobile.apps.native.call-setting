/*************************REJECT MESSAGE LIST VIEW LAYOUT *************************/
	group {
		name: "reject_msg_listview_layout";
		parts {
			part {
				name: "elm.swallow.contents";
				type: SWALLOW;
				scale: 1;
				description {
					state: "default" 0.0;
					visible: 1;
					rel1 { relative: 0.0 0.0; }
					rel2 { relative: 1.0 1.0; }
				}
				description {
					state: "show_content2" 0.0;
					inherit: "default" 0.0;
					visible: 0;
				}
			}

			part {
				name: "elm.swallow.contents2";
				type: SWALLOW;
				scale: 1;
				description {
					state: "default" 0.0;
					visible: 0;
					rel1 { relative: 0.0 0.0;}
					rel2 { relative: 1.0 1.0;}
				}
				description {
					state: "show_content2" 0.0;
					inherit: "default" 0.0;
					visible: 1;
				}
			}
		}

		programs {
			program {
				name: "show_contents1";
				signal: "show,content1";
				source: "code";
				action: STATE_SET "default" 0.0;
				target: "elm.swallow.contents";
				target: "elm.swallow.contents2";
			}

			program {
				name: "show_contents2";
				signal: "show,content2";
				source: "code";
				action: STATE_SET "show_content2" 0.0;
				target: "elm.swallow.contents";
				target: "elm.swallow.contents2";
			}
		}
	}

/*************************REJECT MESSAGE EDIT VIEW LAYOUT *************************/
	group { name: "edit_reject_msg_layout";
		parts {
			part { name: "bg";
				type: RECT;
				description { state: "default" 0.0;
					color: EDITFIELD_BG_COLOR_INC;
				}
			}

			part { name: "padding_left";
				type: SPACER;
				scale: 1;
				description { state: "default" 0.0;
					fixed: 1 0;
	      			align: 0.0 0.5;
	      			rel2.relative: 0.0 1.0;
	      			min: PADDING_LEFT 0;
	      			max: PADDING_LEFT -1;
	      		}
			}

			part { name: "padding_right";
				type: SPACER;
				scale: 1;
				description { state: "default" 0.0;
					fixed: 1 0;
	      			align: 1.0 0.5;
	      			rel1.relative: 1.0 0.0;
	      			min: PADDING_RIGHT 0;
	      			max: PADDING_RIGHT -1;
				}
			}

			part { name: "char_count_bg";
				type: RECT;
				scale: 1;
				description { state: "default" 0.0;
					fixed: 0 1;
					align: 0.5 0.0;
					rel2.relative: 1.0 0.0;
					min: 0 EDITFIELD_COUNT_ENTRY_HEIGHT;
					color: EDITFIELD_ENTRY_BG_COLOR_INC;
				}
			}

			part { name: "entry_bg";
				type: RECT;
				scale: 1;
				description { state: "default" 0.0;
					align: 0.5 0.0;
					rel1 {
         				relative: 0 1; to: "char_count_bg";
      				}
      				rel2 {
						relative: 1 1; to: "entry_part";
      				}
					color: EDITFIELD_ENTRY_BG_COLOR_INC;
				}
			}

			part { name: "char_count_text";
				type: TEXT;
				scale: 1;
				description { state: "default" 0.0;
					fixed: 0 1;
					rel1 {
         				relative: 1 0;
         				to_x: "padding_left";
         				to_y: "char_count_bg";
      				}
      				rel2 {
						relative: 0 1;
         				to_x: "padding_right";
         				to_y: "char_count_bg";
      				}
      				text {
						font: "Tizen:style=Regular";
						size: EDITFIELD_COUNT_ENTRY_FONT_SIZE;
						align: 1.0 0.5;
						text_class: "tizen";
						ellipsis: -1;
					}
					color: EDITFIELD_COUNT_ENTRY_TEXT_COLOR_INC;
					min: 0 EDITFIELD_COUNT_ENTRY_HEIGHT;
				}
			}

			part { name: "entry_part";
				type: SWALLOW;
				description { state: "default" 0.0;
					align: 0.5 0.0;
			    	rel1 {
			        	relative: 0 1;
			        	to_y: "char_count_bg";
			      	}
			      	rel2 {
			        	relative: 1 1;
			        	to_y: "char_count_bg";
			      	}
			      	min: 0 ENTRY_ITEM_HEIGHT;
				}
			}
		}
	}

/*************************CALL FORWARDING POPUP LAYOUT *************************/
	group { name: "elm/layout/popup/callforwardingview";
	   parts {
	      part { name: "pad_l";
	         type: SPACER;
	         scale: 1;
	         description { state: "default" 0.0;
	            min: POPUP_CONTENT_DEFAULT_PADDING_LEFT_MIN_INC 0;
	            fixed: 1 0;
	            rel1.relative: 0.0 0.0;
	            rel2.relative: 0.0 1.0;
	            align: 0.0 0.0;
	         }
	      }
	      part { name: "pad_r";
	         type: SPACER;
	         scale: 1;
	         description { state: "default" 0.0;
	            min: POPUP_CONTENT_DEFAULT_PADDING_LEFT_MIN_INC 0;
	            fixed: 1 0;
	            rel1.relative: 1.0 0.0;
	            rel2.relative: 1.0 1.0;
	            align: 1.0 0.0;
	         }
	      }
	      part { name: "elm.swallow.content";
	         type: SWALLOW;
	         scale: 1;
	         description { state: "default" 0.0;
	            min: 0 POPUP_EDITFIELD_LAYOUT_MINMAX_HEIGHT_INC;
	            align: 0.5 0.5;
	            rel1{
	               relative: 1.0 0.0 ;
	               to_x: "pad_l";
	            }
	            rel2{
	               relative: 0.0 1.0;
	               to_x: "pad_r";
	            }
	         }
	      }
	   }
	}

/**********************************CONTACT ICON BUTTON***************************************/
	CST_ICON_BTN("CONTACT_ICON", CST_IMG_CONTACTS, CONTACT_BUTTON_SIZE, CONTACT_BTN_COLOR_NORMAL, CONTACT_BTN_COLOR_PRESSED);

