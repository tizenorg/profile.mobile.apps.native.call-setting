#define CST_SIM_IMAGE(LAYOUT_NAME, IMAGE_NAME) \
	group { \
		images { \
			image: IMAGE_NAME COMP; \
		} \
		name: LAYOUT_NAME; \
		parts { \
			part { name: "image"; \
				description { \
					state: "default" 0.0; \
					min: 32 32;\
					max: 32 32;\
					image.normal: IMAGE_NAME; \
					aspect: 1 1; \
					align: 1 0.5;\
					aspect_preference: BOTH; \
				} \
			} \
		} \
	}

#define CST_ICON_BTN(LAYOUT_NAME, IMAGE_NAME, IMAGE_SIZE, COLOR_NORMAL, COLOR_PRESSED) \
	group { \
		images { \
			image: IMAGE_NAME COMP; \
		} \
		name: LAYOUT_NAME; \
		parts { \
			part { name: "image"; \
				description { \
					state: "default" 0.0; \
					min: IMAGE_SIZE IMAGE_SIZE;\
					max: IMAGE_SIZE IMAGE_SIZE;\
					image.normal: IMAGE_NAME; \
					aspect: 1 1; \
					align: 1 0.5;\
					color: COLOR_NORMAL;\
					aspect_preference: BOTH; \
				} \
				description { \
					state: "pressed" 0.0; \
					inherit: "default" 0.0; \
					color: COLOR_PRESSED; \
				} \
			} \
		} \
		programs { \
			program { \
				name: "icon_press"; \
				signal: "icon,press"; \
				source: "cst"; \
				action: STATE_SET "pressed" 0.0; \
				target: "image"; \
			} \
			program { \
				name: "icon_unpress"; \
				signal: "icon,unpress"; \
				source: "cst"; \
				action: STATE_SET "default" 0.0; \
				target: "image"; \
			} \
		} \
	}

collections {
   base_scale: 2.6;
   color_classes {
